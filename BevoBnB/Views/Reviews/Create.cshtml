@model BevoBnB.ViewModels.ReviewCreateViewModel

@{
    ViewData["Title"] = "Create Review";
}

<h1>Create Review</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Dropdown for Reserved Properties -->
            <div class="form-group">
                <label asp-for="PropertyID" class="control-label">Select Property</label>
                <select asp-for="PropertyID" class="form-control" asp-items="Model.PropertyOptions ?? new List<SelectListItem>()">
                    <option value="">-- Select a Property --</option>
                </select>
                <span asp-validation-for="PropertyID" class="text-danger"></span>
            </div>

            <!-- Rating Input -->
            <div class="form-group">
                <label asp-for="Rating" class="control-label">Rating (1-5)</label>
                <input asp-for="Rating" class="form-control" type="number" min="1" max="5" step="1" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <!-- Comment Box -->
            <div class="form-group">
                <label asp-for="ReviewText" class="control-label">Comment (Optional)</label>
                <textarea asp-for="ReviewText" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit Review</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
