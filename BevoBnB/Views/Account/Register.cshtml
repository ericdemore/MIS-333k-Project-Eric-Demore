@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))

                    {
                        <h4 class="mb-0 text-center">Create a New Admin Account</h4>
                    }

                    else

                    {
                        <h4 class="mb-0 text-center">Register a New User</h4>
                    }
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessages != null && ((List<string>)ViewBag.ErrorMessages).Any())

                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var error in (List<string>)ViewBag.ErrorMessages)

                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label font-weight-bold">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label font-weight-bold">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DOB" class="form-label font-weight-bold">Date of Birth</label>
                            <input asp-for="DOB" class="form-control" type="date" />
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LineAddress" class="form-label font-weight-bold">Address</label>
                            <input asp-for="LineAddress" class="form-control" />
                            <span asp-validation-for="LineAddress" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label font-weight-bold">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label font-weight-bold">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label font-weight-bold">Password</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label font-weight-bold">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        @if (!User.Identity.IsAuthenticated)

                        {
                            <!-- Host Account Checkbox (for anonymous users only) -->
                            <div class="form-group form-check mb-3">
                                <input asp-for="IsHostAccount" class="form-check-input" type="checkbox" id="IsHostAccount" />
                                <label asp-for="IsHostAccount" class="form-check-label">This account will be a host account</label>
                                <span asp-validation-for="IsHostAccount" class="text-danger"></span>
                            </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="bi bi-person-plus-fill"></i> Register
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-link">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/validate-age.js"></script>
}