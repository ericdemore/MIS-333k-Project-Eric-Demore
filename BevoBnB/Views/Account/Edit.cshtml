@model BevoBnB.Models.EditViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 text-center">Edit User Information</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessages != null && ((List<string>)ViewBag.ErrorMessages).Any())
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var error in (List<string>)ViewBag.ErrorMessages)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success">
                            <p>@ViewBag.SuccessMessage</p>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label font-weight-bold">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label font-weight-bold">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DOB" class="form-label font-weight-bold">Date of Birth</label>
                            <input asp-for="DOB" class="form-control" type="date" />
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LineAddress" class="form-label font-weight-bold">Address</label>
                            <input asp-for="LineAddress" class="form-control" />
                            <span asp-validation-for="LineAddress" class="text-danger"></span>
                        </div>

                        @if (Model.IsAdmin)
                        {
                            <div class="form-group mb-3">
                                <label asp-for="HireStatus" class="form-label font-weight-bold">Hire Status</label>
                                <select asp-for="HireStatus" asp-items="Html.GetEnumSelectList<HireStatus>()" class="form-control">
                                </select>
                                <span asp-validation-for="HireStatus" class="text-danger"></span>
                            </div>
                        }

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label font-weight-bold">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Profiles" class="btn btn-link">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
