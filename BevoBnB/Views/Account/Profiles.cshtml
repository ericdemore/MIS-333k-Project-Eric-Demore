@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Profiles";
}

<h1>List of Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.DOB.ToString("MM/dd/yyyy")</td>
                <td>@user.LineAddress</td>
                <td>
                    <a asp-action="Index" asp-route-id="@user.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
