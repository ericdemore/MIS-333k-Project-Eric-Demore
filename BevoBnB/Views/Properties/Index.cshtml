@model IEnumerable<BevoBnB.Models.Property>

@{
    ViewData["Title"] = "Index";
}

<h1>Properties</h1>

<!-- Search Form -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-center">
        <!-- General Search -->
        <div class="col-md-2">
            <label for="searchString" class="form-label">General Search</label>
            <input type="text" name="searchString" id="searchString" class="form-control" placeholder="City, state, etc." value="@ViewData["SearchString"]" />
        </div>

        <!-- Bedrooms -->
        <div class="col-md-2">
            <label for="bedrooms" class="form-label">Bedrooms</label>
            <input type="number" name="bedrooms" id="bedrooms" class="form-control" placeholder="e.g. 2" />
        </div>

        <!-- Bathrooms -->
        <div class="col-md-2">
            <label for="bathrooms" class="form-label">Bathrooms</label>
            <input type="number" name="bathrooms" id="bathrooms" class="form-control" placeholder="e.g. 1" />
        </div>

        <!-- Guests -->
        <div class="col-md-2">
            <label for="guestsAllowed" class="form-label">Guests</label>
            <input type="number" name="guestsAllowed" id="guestsAllowed" class="form-control" placeholder="e.g. 4" />
        </div>

        <!-- Min Price -->
        <div class="col-md-2">
            <label for="minPrice" class="form-label">Min Price</label>
            <input type="number" name="minPrice" id="minPrice" class="form-control" placeholder="Min $" step="0.01" />
        </div>

        <!-- Max Price -->
        <div class="col-md-2">
            <label for="maxPrice" class="form-label">Max Price</label>
            <input type="number" name="maxPrice" id="maxPrice" class="form-control" placeholder="Max $" step="0.01" />
        </div>

        <!-- Checkboxes -->
        <div class="col-md-2">
            <div class="form-check mt-4">
                <input type="checkbox" name="petsAllowed" id="petsAllowed" class="form-check-input" value="true" />
                <label for="petsAllowed" class="form-check-label">Pets Allowed</label>
            </div>
            <div class="form-check">
                <input type="checkbox" name="freeParking" id="freeParking" class="form-check-input" value="true" />
                <label for="freeParking" class="form-check-label">Free Parking</label>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="row mt-3">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-danger">Clear Search</a>
        </div>
    </div>
</form>

<!-- Results Count -->
@if (ViewBag.SelectedProperties != null && ViewBag.AllProperties != null)
{
    <p>
        @if (ViewBag.SelectedProperties == ViewBag.AllProperties || ViewBag.SelectedProperties == 0)
        {
            <span>Showing @ViewBag.SelectedProperties of @ViewBag.AllProperties properties.</span>
        }
        else
        {
            <span>Showing @ViewBag.SelectedProperties of @ViewBag.SelectedProperties properties.</span>
        }
    </p>
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<!-- Properties Table -->
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PropertyNumber)</th>
            <th>@Html.DisplayNameFor(model => model.City)</th>
            <th>@Html.DisplayNameFor(model => model.State)</th>
            <th>@Html.DisplayNameFor(model => model.Bedrooms)</th>
            <th>@Html.DisplayNameFor(model => model.Bathrooms)</th>
            <th>@Html.DisplayNameFor(model => model.GuestsAllowed)</th>
            <th>@Html.DisplayNameFor(model => model.PetsAllowed)</th>
            <th>@Html.DisplayNameFor(model => model.FreeParking)</th>
            <th>@Html.DisplayNameFor(model => model.WeekdayPricing)</th>
            <th>@Html.DisplayNameFor(model => model.WeekendPricing)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PropertyNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bedrooms)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bathrooms)</td>
                    <td>@Html.DisplayFor(modelItem => item.GuestsAllowed)</td>
                    <td>@(item.PetsAllowed ? "Yes" : "No")</td>
                    <td>@(item.FreeParking ? "Yes" : "No")</td>
                    <td>@item.WeekdayPricing.ToString("C")</td>
                    <td>@item.WeekendPricing.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PropertyID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PropertyID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PropertyID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11">No properties match your search criteria.</td>
            </tr>
        }
    </tbody>
</table>
