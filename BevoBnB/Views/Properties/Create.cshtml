@model BevoBnB.Models.Property

@{
    ViewData["Title"] = "Create Property";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 text-center">Create a New Property</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Property Number: Hidden -->
                        <input type="hidden" asp-for="PropertyNumber" value="@Model.PropertyNumber" />

                        <!-- Street Address -->
                        <div class="form-group mb-3">
                            <label asp-for="StreetAddress" class="form-label font-weight-bold">Street Address</label>
                            <input asp-for="StreetAddress" class="form-control" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>

                        <!-- City -->
                        <div class="form-group mb-3">
                            <label asp-for="City" class="form-label font-weight-bold">City</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <!-- State -->
                        <div class="form-group mb-3">
                            <label asp-for="State" class="form-label font-weight-bold">State</label>
                            <select asp-for="State" asp-items="Html.GetEnumSelectList<States>()" class="form-control">
                                <option value="">Select State</option>
                            </select>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>

                        <!-- Zip Code -->
                        <div class="form-group mb-3">
                            <label asp-for="ZipCode" class="form-label font-weight-bold">Zip Code</label>
                            <input asp-for="ZipCode" class="form-control" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>

                        <!-- Bedrooms -->
                        <div class="form-group mb-3">
                            <label asp-for="Bedrooms" class="form-label font-weight-bold">Bedrooms</label>
                            <input asp-for="Bedrooms" class="form-control" />
                            <span asp-validation-for="Bedrooms" class="text-danger"></span>
                        </div>

                        <!-- Bathrooms -->
                        <div class="form-group mb-3">
                            <label asp-for="Bathrooms" class="form-label font-weight-bold">Bathrooms</label>
                            <input asp-for="Bathrooms" class="form-control" />
                            <span asp-validation-for="Bathrooms" class="text-danger"></span>
                        </div>

                        <!-- Guests Allowed -->
                        <div class="form-group mb-3">
                            <label asp-for="GuestsAllowed" class="form-label font-weight-bold">Guests Allowed</label>
                            <input asp-for="GuestsAllowed" class="form-control" />
                            <span asp-validation-for="GuestsAllowed" class="text-danger"></span>
                        </div>

                        <!-- Pets Allowed -->
                        <div class="form-check mb-3">
                            <input asp-for="PetsAllowed" class="form-check-input" type="checkbox" />
                            <label asp-for="PetsAllowed" class="form-check-label font-weight-bold">Pets Allowed</label>
                        </div>

                        <!-- Free Parking -->
                        <div class="form-check mb-3">
                            <input asp-for="FreeParking" class="form-check-input" type="checkbox" />
                            <label asp-for="FreeParking" class="form-check-label font-weight-bold">Free Parking</label>
                        </div>

                        <!-- Weekday Pricing -->
                        <div class="form-group mb-3">
                            <label asp-for="WeekdayPricing" class="form-label font-weight-bold">Weekday Pricing</label>
                            <input asp-for="WeekdayPricing" class="form-control" />
                            <span asp-validation-for="WeekdayPricing" class="text-danger"></span>
                        </div>

                        <!-- Weekend Pricing -->
                        <div class="form-group mb-3">
                            <label asp-for="WeekendPricing" class="form-label font-weight-bold">Weekend Pricing</label>
                            <input asp-for="WeekendPricing" class="form-control" />
                            <span asp-validation-for="WeekendPricing" class="text-danger"></span>
                        </div>

                        <!-- Cleaning Fee -->
                        <div class="form-group mb-3">
                            <label asp-for="CleaningFee" class="form-label font-weight-bold">Cleaning Fee</label>
                            <input asp-for="CleaningFee" class="form-control" />
                            <span asp-validation-for="CleaningFee" class="text-danger"></span>
                        </div>

                        <!-- Discount Rate -->
                        <div class="form-group mb-3">
                            <label asp-for="DiscountRate" class="form-label font-weight-bold">Discount Rate</label>
                            <input asp-for="DiscountRate" class="form-control" />
                            <span asp-validation-for="DiscountRate" class="text-danger"></span>
                        </div>

                        <!-- Minimum Nights for Discount -->
                        <div class="form-group mb-3">
                            <label asp-for="MinNightsforDiscount" class="form-label font-weight-bold">Minimum Nights for Discount</label>
                            <input asp-for="MinNightsforDiscount" class="form-control" />
                            <span asp-validation-for="MinNightsforDiscount" class="text-danger"></span>
                        </div>

                        <!-- Unavailable Dates -->
                        <input type="hidden" asp-for="UnavailableDates" value="@Model.UnavailableDates" />

                        <!-- PropertyStatus: Hidden -->
                        <input type="hidden" asp-for="PropertyStatus" value="@Model.PropertyStatus" />

                        <!-- Category Dropdown -->
                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="form-label font-weight-bold">Category</label>
                            @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.AllCategories, new { @class = "form-control" })
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="bi bi-plus-circle"></i> Create Property
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-link">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
