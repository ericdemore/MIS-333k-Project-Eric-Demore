@model BevoBnB.Models.Property

@{
    ViewData["Title"] = "Edit";
}

<style>
    .readonly-field {
        background-color: #f0f0f0; /* Light gray background */
        color: #6c757d; /* Muted text color */
        cursor: not-allowed; /* Show not-allowed cursor */
    }
</style>

<h1>Edit Property</h1>

<h4>You can only edit prices, cleaning fees, and discount parameters.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PropertyID" />

            <!-- Read-Only Property Number -->
            <div class="form-group">
                <label asp-for="PropertyNumber" class="control-label"></label>
                <input asp-for="PropertyNumber" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only Street Address -->
            <div class="form-group">
                <label asp-for="StreetAddress" class="control-label"></label>
                <input asp-for="StreetAddress" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only City -->
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only State -->
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only Zip Code -->
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only Bedrooms -->
            <div class="form-group">
                <label asp-for="Bedrooms" class="control-label"></label>
                <input asp-for="Bedrooms" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only Bathrooms -->
            <div class="form-group">
                <label asp-for="Bathrooms" class="control-label"></label>
                <input asp-for="Bathrooms" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only Guests Allowed -->
            <div class="form-group">
                <label asp-for="GuestsAllowed" class="control-label"></label>
                <input asp-for="GuestsAllowed" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only Pets Allowed -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input readonly-field" asp-for="PetsAllowed" disabled /> @Html.DisplayNameFor(model => model.PetsAllowed)
                </label>
            </div>

            <!-- Read-Only Free Parking -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input readonly-field" asp-for="FreeParking" disabled /> @Html.DisplayNameFor(model => model.FreeParking)
                </label>
            </div>

            <!-- Editable Weekday Pricing -->
            <div class="form-group">
                <label asp-for="WeekdayPricing" class="control-label"></label>
                <input asp-for="WeekdayPricing" class="form-control" />
                <span asp-validation-for="WeekdayPricing" class="text-danger"></span>
            </div>

            <!-- Editable Weekend Pricing -->
            <div class="form-group">
                <label asp-for="WeekendPricing" class="control-label"></label>
                <input asp-for="WeekendPricing" class="form-control" />
                <span asp-validation-for="WeekendPricing" class="text-danger"></span>
            </div>

            <!-- Editable Cleaning Fee -->
            <div class="form-group">
                <label asp-for="CleaningFee" class="control-label"></label>
                <input asp-for="CleaningFee" class="form-control" />
                <span asp-validation-for="CleaningFee" class="text-danger"></span>
            </div>

            <!-- Editable Discount Rate -->
            <div class="form-group">
                <label asp-for="DiscountRate" class="control-label"></label>
                <input asp-for="DiscountRate" class="form-control" />
                <span asp-validation-for="DiscountRate" class="text-danger"></span>
            </div>

            <!-- Editable Min Nights for Discount -->
            <div class="form-group">
                <label asp-for="MinNightsforDiscount" class="control-label"></label>
                <input asp-for="MinNightsforDiscount" class="form-control" />
                <span asp-validation-for="MinNightsforDiscount" class="text-danger"></span>
            </div>

            <!-- Read-Only Unavailable Dates -->
            <div class="form-group">
                <label asp-for="UnavailableDates" class="control-label"></label>
                <input asp-for="UnavailableDates" class="form-control readonly-field" readonly />
            </div>

            <!-- Read-Only Property Status -->
            <div class="form-group">
                <label asp-for="PropertyStatus" class="control-label"></label>
                <input asp-for="PropertyStatus" class="form-control readonly-field" readonly />
            </div>

            <!-- Submit Button -->
            <div class="form-group mb-3">
                <label asp-for="PropertyStatus" class="control-label"></label>
                <input asp-for="PropertyStatus" class="form-control readonly-field" readonly />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
