@model BevoBnB.ViewModels.PropertySearchViewModel

@{
    ViewData["Title"] = "Detailed Search";
}

<h1>Detailed Search</h1>
<hr />

<form asp-action="DisplaySearchResults" method="post">
    <div class="row g-3">
        <!-- City -->
        <div class="col-md-4">
            <label asp-for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control" placeholder="Enter city" />
        </div>

        <!-- State -->
        <div class="col-md-4">
            <label asp-for="State" class="form-label">State</label>
            <select asp-for="State" class="form-control" asp-items="@Model.States">
                <option value="">All States</option> <!-- Default value -->
            </select>
        </div>

        <!-- Category -->
        <div class="col-md-4">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@Model.Categories">
                <option value="">All Categories</option> <!-- Default value -->
            </select>
        </div>
    </div>

    <div class="row g-3 mt-3">
        <!-- Bedrooms -->
        <div class="col-md-4">
            <label asp-for="Bedrooms" class="form-label">Minimum Bedrooms</label>
            <input asp-for="Bedrooms" class="form-control" type="number" min="1" />
        </div>

        <!-- Bathrooms -->
        <div class="col-md-4">
            <label asp-for="Bathrooms" class="form-label">Minimum Bathrooms</label>
            <input asp-for="Bathrooms" class="form-control" type="number" min="1" />
        </div>

        <!-- Guests Allowed -->
        <div class="col-md-4">
            <label asp-for="GuestsAllowed" class="form-label">Guests Allowed</label>
            <input asp-for="GuestsAllowed" class="form-control" type="number" min="1" />
        </div>
    </div>

    <div class="row g-3 mt-3">
        <!-- Price Range -->
        <div class="col-md-6">
            <label asp-for="MinPrice" class="form-label">Price Range</label>
            <div class="input-group">
                <input asp-for="MinPrice" class="form-control" placeholder="Min Price" type="number" step="0.01" min="0" />
                <input asp-for="MaxPrice" class="form-control" placeholder="Max Price" type="number" step="0.01" min="0" />
            </div>
        </div>
    </div>

    <div class="row g-3 mt-3">
        <!-- Pets Allowed -->
        <div class="form-check">
            <input type="hidden" name="PetsAllowed" value="false" /> <!-- Sends false if not checked -->
            <input asp-for="PetsAllowed" class="form-check-input" type="checkbox" value="true" />
            <label asp-for="PetsAllowed" class="form-check-label">Pets Allowed</label>
        </div>

        <!-- Free Parking -->
        <div class="form-check">
            <input type="hidden" name="FreeParking" value="false" /> <!-- Sends false if not checked -->
            <input asp-for="FreeParking" class="form-check-input" type="checkbox" value="true" />
            <label asp-for="FreeParking" class="form-check-label">Free Parking</label>
        </div>
    </div>


    <!-- Submit Button -->
    <div class="row mt-4">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
